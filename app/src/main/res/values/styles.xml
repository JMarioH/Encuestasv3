<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textTittle">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textNormal">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="mButton" >
        <item name="android:textColor">@color/colorBackgroundTxt</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_button_inicio</item>
    </style>
    <style name="mEditText">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextPrimary</item>
        <item name="android:height">26dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/shape_edit</item>
    </style>

    <style name="mButtonCuestionario" >
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>
    <style name="mButtonInicio" >
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/shape_button_inicio</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorBackgoundHeader</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>
</resources>
